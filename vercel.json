{
    "version": 2,
    "builds": [
      {
        "src": "/frontend/**/*",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "/api/**/*",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ]
  }
  